<!-- EDIT MODAL -->
<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Gitar</h5>
            <button class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
            </button>
        </div>
        <form action="/gitar?_method=PUT" method="POST">
            <div class="modal-body">
                <div class="form-group">
                    <label for="name">ID Gitar</label>
                    <input type="text" class="form-control" id="id_gitar" name="id_gitar" placeholder="Masukan ID Gitar" required />
                </div>
                <div class="form-group">
                    <label for="name">Merk</label>
                    <input type="text" class="form-control" id="merk" name="merk" placeholder="Masukan Merk Gitar" required />
                </div>
                <div class="form-group">
                    <label for="name">Fret</label>
                    <input type="number" class="form-control" id="fret" name="fret" placeholder="Masukan Jumlah Fret" required />
                </div>
                <div class="form-group">
                    <label for="name">Jenis Kayu</label>
                    <input type="text" class="form-control" id="jeniskayu" name="jeniskayu" placeholder="Masukan Jenis Kayu" required />
                </div>
                <div class="form-group">
                    <label for="name">Seri</label>
                    <input type="text" class="form-control" id="seri" name="seri" placeholder="Masukan Seri Gitar" required />
                </div>
                <div class="form-group">
                    <label for="name">Deskripsi</label>
                    <textarea class="form-control" name="deskripsi" id="exampleFormControlTextarea1" cols="30" rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="name">Foto</label>
                    <input type="text" class="form-control" id="foto" name="foto" placeholder="Masukan file" required />
                </div>
                <div class="modal-footer">
                    <input type="hidden" class="id" name="id">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
        </form>
        </div>
    </div>
</div>